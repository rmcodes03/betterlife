<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/receiveCardView"
    android:padding="10dp"
    android:layout_margin="5dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="5dp"
        android:src="@drawable/user"
        android:layout_centerVertical="true"
        android:id="@+id/receiveimageView">
    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/receiveNameTextView"
        android:text="Name"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:layout_toRightOf="@id/receiveimageView"
        android:layout_alignParentTop="true">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/receiveMedicineTextView"
        android:text="Available medicine"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="16dp"
        android:layout_toRightOf="@id/receiveimageView"
        android:layout_below="@id/receiveNameTextView">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quantityTextView"
        android:text="Quantity"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="16dp"
        android:layout_toRightOf="@id/receiveimageView"
        android:layout_below="@id/receiveMedicineTextView">
    </TextView>
</RelativeLayout>
</androidx.cardview.widget.CardView>